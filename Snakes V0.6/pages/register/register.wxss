/* pages/register/register.wxss */
.container {
    padding: 60rpx;
    min-height: 100vh;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
}

.header {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 80rpx;
}

.logo {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 30rpx;
    animation: float 3s ease-in-out infinite;
}

@keyframes float {
    0% { transform: translateY(0); }
    50% { transform: translateY(-20rpx); }
    100% { transform: translateY(0); }
}

.title {
    font-size: 56rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
    text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
    letter-spacing: 4rpx;
}

.subtitle {
    font-size: 32rpx;
    color: #ff6b6b;
    font-weight: 500;
    padding: 8rpx 24rpx;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 30rpx;
    box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.form {
    width: 100%;
    max-width: 600rpx;
}

.input-group {
    margin-bottom: 40rpx;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 24rpx;
    padding: 20rpx 30rpx;
    box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
    display: flex;
    align-items: center;
    transition: all 0.3s ease;
}

.input-group:active {
    transform: scale(0.98);
}

.input-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.input {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 34rpx;
    color: #333;
}

.input::placeholder {
    color: #999;
}

.error-text {
    color: #ff6b6b;
    font-size: 24rpx;
    margin-top: 10rpx;
    display: block;
    text-align: right;
}

.login-btn {
    margin-top: 60rpx;
    background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
    color: white;
    border-radius: 50rpx;
    font-size: 34rpx;
    padding: 20rpx 0;
    box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
    transition: all 0.3s ease;
}

.login-btn:active {
    transform: scale(0.98);
}

.login-btn[disabled] {
    background: #ddd;
    box-shadow: none;
}

.links {
    margin-top: 40rpx;
    text-align: center;
    width: 100%;
}

.link-container {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.8);
    padding: 16rpx 32rpx;
    border-radius: 40rpx;
    box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
    transition: all 0.3s ease;
}

.link-container:active {
    transform: scale(0.98);
}

.link-text {
    color: #666;
    font-size: 26rpx;
    margin-right: 8rpx;
}

.link {
    display: flex;
    align-items: center;
    text-decoration: none;
}

.link-content {
    color: #ff6b6b;
    font-size: 26rpx;
    font-weight: 500;
    margin-left: 8rpx;
}

.link-arrow {
    color: #ff6b6b;
    font-size: 26rpx;
    font-weight: bold;
    transition: transform 0.3s ease;
}

.link-container:active .link-arrow {
    transform: translateX(-10rpx);
}
